<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PFXToolKitUI.Avalonia.Activities"
                    xmlns:avc="clr-namespace:PFXToolKitUI.Avalonia.AvControls"
                    xmlns:tt="clr-namespace:PFXToolKitUI.Avalonia.ToolTips"
                    xmlns:pfxToolKitUi="clr-namespace:PFXToolKitUI;assembly=PFXToolKitUI">
    <ControlTheme x:Key="{x:Type local:ActivityListItem}" TargetType="{x:Type local:ActivityListItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ABrush.Foreground.Static}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type local:ActivityListItem}">
                <local:ActivityProgressRowControl x:Name="PART_Row" Margin="{TemplateBinding Padding}"/>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type local:ActivityProgressRowControl}" TargetType="{x:Type local:ActivityProgressRowControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ABrush.Foreground.Static}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type local:ActivityProgressRowControl}">
                <Border>
                    <StackPanel Margin="{TemplateBinding Padding}" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <TextBlock x:Name="PART_Header" Text="Header Here" Padding="1,3"/>
                        
                        <DockPanel HorizontalSpacing="5">
                            <avc:IconButton DockPanel.Dock="Right"
                                            x:Name="PART_CancelActivityButton"
                                            Width="16" Height="16" Margin="0"
                                            BorderThickness="0"
                                            CornerRadius="2"
                                            tt:ToolTipEx.Tip="Cancels this task"
                                            Icon="{x:Static pfxToolKitUi:StandardIcons.CancelActivityIcon}"/>
                            
                            <avc:IconButton DockPanel.Dock="Right" x:Name="PART_PlayPauseButton"
                                            Width="16" Height="16" Margin="0"
                                            BorderThickness="0"
                                            CornerRadius="2"/>
                            <ProgressBar x:Name="PART_ProgressBar" Minimum="0" Maximum="1" Height="9" BorderThickness="0" CornerRadius="2"/>
                        </DockPanel>
                        
                        <TextBlock x:Name="PART_Footer" Text="Footer Here" Padding="1,3" Foreground="{DynamicResource ABrush.Foreground.Deeper}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type local:SubActivityProgressRowControl}" TargetType="{x:Type local:SubActivityProgressRowControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ABrush.Foreground.Static}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type local:SubActivityProgressRowControl}">
                <Border>
                    <StackPanel Margin="{TemplateBinding Padding}" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <TextBlock x:Name="PART_Header" Text="Header Here" Padding="1,3"/>
                        
                        <DockPanel HorizontalSpacing="5">
                            <avc:IconButton DockPanel.Dock="Right"
                                            x:Name="PART_CancelActivityButton"
                                            Width="16" Height="16"
                                            BorderThickness="0"
                                            CornerRadius="2"
                                            tt:ToolTipEx.Tip="Cancels this task"
                                            Icon="{x:Static pfxToolKitUi:StandardIcons.CancelActivityIcon}"/>
                            <ProgressBar x:Name="PART_ProgressBar" Minimum="0" Maximum="1" Height="9" BorderThickness="0" CornerRadius="2"/>
                        </DockPanel>
                        
                        <TextBlock x:Name="PART_Footer" Text="Footer Here" Padding="1,3" Foreground="{DynamicResource ABrush.Foreground.Deeper}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type local:ActivityListBoxControl}" TargetType="{x:Type local:ActivityListBoxControl}">
        <Setter Property="Background" Value="{DynamicResource ABrush.Tone2.Background.Static}"/>
        <Setter Property="HeaderBrush" Value="{DynamicResource ABrush.Tone5.Background.Static}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ABrush.Tone6.Border.Static}"/>
        <Setter Property="Foreground" Value="{DynamicResource ABrush.Foreground.Static}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type local:ActivityListBoxControl}">
                <Border x:Name="PART_Border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        TextElement.Foreground="{TemplateBinding Foreground}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="PART_ItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <Design.PreviewWith>
        <StackPanel>
            <local:ActivityListItem/>
            <local:ActivityListItem/>
            <local:ActivityListItem/>
        </StackPanel>
    </Design.PreviewWith>
</ResourceDictionary>