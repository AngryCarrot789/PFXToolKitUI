<w:DesktopWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:w="clr-namespace:PFXToolKitUI.Avalonia.Services.Windowing"
                 xmlns:ui="clr-namespace:PFXToolKitUI.Avalonia.Services.UserInputs"
                 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                 x:Class="PFXToolKitUI.Avalonia.Services.UserInputs.UserInputDialogWindow"
                 BorderBrush="DodgerBlue"
                 TitleBarBrush="{DynamicResource ABrush.Tone4.Background.Static}"
                 Title="Message Caption Here"
                 SizeToContent="WidthAndHeight">
    <ui:UserInputDialogView x:Name="PART_UserInputDialogView" 
                            UserInputInfo="{Binding RelativeSource={RelativeSource AncestorType={x:Type ui:UserInputDialogWindow}}, Path=UserInputInfo, Mode=TwoWay}"/>
</w:DesktopWindow>