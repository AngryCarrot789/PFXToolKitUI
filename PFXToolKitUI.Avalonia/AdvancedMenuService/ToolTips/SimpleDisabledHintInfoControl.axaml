<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avc="clr-namespace:PFXToolKitUI.Avalonia.AvControls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PFXToolKitUI.Avalonia.AdvancedMenuService.ToolTips.SimpleDisabledHintInfoControl">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="3">
            <avc:IconControl x:Name="PART_IconControl" Width="16" Height="16"/>
            <TextBlock x:Name="PART_Caption" Text="Not Connected" FontSize="14" TextDecorations="Underline" Padding="2,1"/>
        </StackPanel>
        <TextBlock x:Name="PART_MainText" Text="Not connected to a console" Padding="2,1"/>
    </StackPanel>
</UserControl>