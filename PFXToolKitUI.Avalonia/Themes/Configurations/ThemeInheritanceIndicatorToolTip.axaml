<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PFXToolKitUI.Avalonia.Themes.Configurations.ThemeInheritanceIndicatorToolTip">
    <TextBlock>
        <Run Text="This indicator means we're inherited from another key"/>
        <LineBreak/>
        <Run Text="Light blue means the current theme has defined the inheritance"/>
        <LineBreak/>
        <Run Text="Yellow means a base theme has defined the inheritance, however, you can still override it, and then it becomes light blue."/>
    </TextBlock>
</UserControl>
