<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PFXToolKitUI.Avalonia.ToolTips.SimpleCommandToolTip">
    <Grid ColumnDefinitions="Auto,Auto">
        <TextBlock x:Name="PART_Text" Grid.Column="0"/>
        <Border x:Name="PART_ShortcutBackground" Grid.Column="1" Background="Black" Padding="3,1">
            <TextBlock x:Name="PART_Shortcut"/>
        </Border>
    </Grid>
</UserControl>
